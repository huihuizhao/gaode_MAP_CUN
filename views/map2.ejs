<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GeoJSON to Shapefile</title>
</head>
<body>
    <div id="error-message" style="color: red;"></div>

    <% if (errorMessage) { %>
        <div style="color: red;">
          <strong>Error:</strong> <%= errorMessage %>
        </div>
      <% } %>
  <h1>GeoJSON to Shapefile Converter</h1>
  <form action="/convert" method="POST">
    <textarea name="geojson" rows="10" cols="30"></textarea><br>
    <button type="button" onclick="convert(event)">Convert</button>

  </form>
  <script>
  function convert(event) {
    // 阻止表单的默认提交行为
    event.preventDefault();

    // 获取textarea中的内容
    const geojson = document.querySelector('textarea[name="geojson"]').value;

    // 创建一个 FormData 对象，并添加 geojson 数据
    const formData = new FormData();
    formData.append('geojson', geojson);

    // 发送一个异步请求到服务器
    const xhr = new XMLHttpRequest();
    xhr.open('POST', '/convert', true);
    xhr.onload = function () {
      if (xhr.status >= 200 && xhr.status < 300) {
        // 请求成功，处理响应
        console.log('Success:', xhr.responseText);
      } else {
        // 请求失败，显示错误信息
        document.getElementById('error-message').innerText = xhr.responseText;
      }
    };
    xhr.onerror = function () {
      // 网络错误，显示错误信息
      document.getElementById('error-message').innerText = 'Network error';
    };
    xhr.send(formData);
  }
    </script>
</body>

</html>
